# ========================================
# HBCU Band Hub - Staging Environment
# ========================================
# This file contains staging-specific configurations.
# Sensitive values should be loaded from secrets management.
# ========================================

# Environment
NODE_ENV=staging

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=${STAGING_DB_PASSWORD}
POSTGRES_DB=hbcu_band_hub_staging
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public"

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# ========================================
# API Configuration
# ========================================
API_PORT=3001
API_URL=https://api.staging.hbcubandhub.com

# ========================================
# Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=https://api.staging.hbcubandhub.com

# ========================================
# Authentication
# ========================================
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ========================================
# YouTube API
# ========================================
YOUTUBE_API_KEY=${STAGING_YOUTUBE_API_KEY}
YOUTUBE_QUOTA_LIMIT=5000

# ========================================
# Worker Configuration
# ========================================
WORKER_CONCURRENCY=3
MAX_YOUTUBE_CALLS_PER_MINUTE=30

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# Staging Options
# ========================================
DEBUG=false
SECURE_COOKIES=true

# ========================================
# SSL Configuration
# ========================================
SSL_CERT_PATH=/etc/letsencrypt/live/staging.hbcubandhub.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/staging.hbcubandhub.com/privkey.pem
