{
  "name": "hbcu-band-hub",
  "version": "0.0.1",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "libs/*",
    "libs/shared/types"
  ],
  "scripts": {
    "start:prod": "node dist/apps/api/src/main.js",
    "setup": "npm install && npm run build:shared && npm run db:generate && npm run db:migrate && npm run db:seed",
    "build:shared": "cd libs/shared/types && npm run build",
    "dev": "npm run build:shared && turbo run dev",
    "dev:api": "npm run build:shared && cd apps/api && npm run dev",
    "dev:worker": "npm run build:shared && cd apps/worker && npm run start:dev",
    "build": "npm run build:shared && turbo run build",
    "build:api": "npm run build:shared && nest build api",
    "build:worker": "npm run build:shared && nest build worker",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "clean": "turbo run clean && rm -rf node_modules dist",
    "backfill": "tsx apps/api/src/scripts/backfill-historical-videos.ts"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "form-data": "^4.0.5",
    "node-fetch": "^2.7.0",
    "prettier": "^3.3.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/schedule": "^6.0.1",
    "@prisma/client": "^5.22.0",
    "bullmq": "^5.64.0",
    "googleapis": "^166.0.0",
    "ioredis": "^5.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "ts-node apps/api/prisma/seed.ts",
    "schema": "apps/api/prisma/schema.prisma"
  },
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
