'use client';

/**
 * Job Monitoring Dashboard Page
 * 
 * Real-time monitoring of BullMQ job queues with:
 * - Live metrics via Server-Sent Events
 * - Stuck job alerts and retry functionality
 * - Queue control (pause/resume/clear)
 * - Success/failure trends
 * 
 * Usage: Place this file in apps/web/src/app/admin/jobs/page.tsx
 */

import { JobMonitor } from '@/components/admin/JobMonitor';
import { useAuth } from '@/contexts/AuthContext';
import { useRouter } from 'next/navigation';
import { useEffect } from 'react';

export default function JobMonitoringPage() {
  const router = useRouter();
  const { user, token, loading } = useAuth();

  // Redirect non-admin users
  useEffect(() => {
    if (!loading && (!user || !['ADMIN', 'SUPER_ADMIN', 'MODERATOR'].includes(user.role))) {
      router.push('/admin/login');
    }
  }, [user, loading, router]);

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  if (!user || !token) {
    return null;
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Header */}
      <header className="bg-white border-b border-gray-200">
        <div className="container mx-auto px-6 py-4">
          <div className="flex items-center justify-between">
            <div>
              <h1 className="text-2xl font-bold text-gray-900">Job Monitoring</h1>
              <p className="text-sm text-gray-600 mt-1">
                Real-time monitoring and management of background job queues
              </p>
            </div>
            <button
              onClick={() => router.push('/admin')}
              className="px-4 py-2 text-gray-700 hover:text-gray-900 font-medium"
            >
              ← Back to Dashboard
            </button>
          </div>
        </div>
      </header>

      {/* Main Content */}
      <main className="container mx-auto px-6 py-8">
        <JobMonitor
          apiUrl={process.env.NEXT_PUBLIC_API_URL || 'http://localhost:3001'}
          getAuthToken={() => token}
          autoRefresh={true}
          refreshInterval={5000}
        />
      </main>

      {/* Footer Info */}
      <footer className="bg-white border-t border-gray-200 mt-12">
        <div className="container mx-auto px-6 py-4">
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-gray-600">
            <div>
              <h3 className="font-bold text-gray-900 mb-2">About Job Monitoring</h3>
              <p>
                Monitor BullMQ job queues in real-time. Track job success rates, 
                detect stuck jobs, and manage queue operations.
              </p>
            </div>
            <div>
              <h3 className="font-bold text-gray-900 mb-2">Features</h3>
              <ul className="space-y-1">
                <li>• Real-time metrics via SSE</li>
                <li>• Stuck job detection & alerts</li>
                <li>• Queue pause/resume/clear</li>
                <li>• Job retry with custom params</li>
              </ul>
            </div>
            <div>
              <h3 className="font-bold text-gray-900 mb-2">Quick Actions</h3>
              <ul className="space-y-1">
                <li>
                  <button className="text-blue-600 hover:underline">
                    View Documentation
                  </button>
                </li>
                <li>
                  <button className="text-blue-600 hover:underline">
                    Queue Configuration
                  </button>
                </li>
                <li>
                  <button className="text-blue-600 hover:underline">
                    Worker Health Status
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </footer>
    </div>
  );
}
