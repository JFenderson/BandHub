{
  "name": "@hbcu-band-hub/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "predev": "prisma generate",
    "dev": "nest start --watch",
    "lint": "eslint \"{src,test}/**/*. ts\" --fix",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=4096 jest --config jest.config.ts",
    "test:watch": "jest --config jest.config. ts --watch",
    "test:cov": "jest --config jest.config.ts --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "api-key:create": "tsx scripts/create-api-key.ts",
    "promote:videos": "tsx scripts/promote-videos.ts"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.958.0",
    "@hbcu-band-hub/observability": "*",
    "@hbcu-band-hub/shared-types": "*",
    "@logtail/pino": "^0.5.7",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/bullmq": "^10.1.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^8.55.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.8.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "googleapis": "^166.0.0",
    "ioredis": "^5.4.0",
    "multer": "^2.0.2",
    "opossum": "^7.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino-datadog": "^2.0.2",
    "prom-client": "^14.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.4.20",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@hbcu-band-hub/shared(.*)$": "<rootDir>/../../../libs/shared/src$1"
    }
  }
}
