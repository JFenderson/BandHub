# ========================================
# HBCU Band Hub - Production Environment
# ========================================
# This file contains production-specific configurations.
# IMPORTANT: Never commit actual secrets to this file!
# Use Docker secrets or environment-specific secret management.
# ========================================

# Environment
NODE_ENV=production

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=${PROD_DB_USER}
POSTGRES_PASSWORD=${PROD_DB_PASSWORD}
POSTGRES_DB=hbcu_band_hub
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public&connection_limit=20&pool_timeout=30"

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# ========================================
# API Configuration
# ========================================
API_PORT=3001
API_URL=https://api.hbcubandhub.com

# ========================================
# Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=https://api.hbcubandhub.com

# ========================================
# Authentication
# ========================================
JWT_SECRET=${PROD_JWT_SECRET}
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ========================================
# YouTube API
# ========================================
YOUTUBE_API_KEY=${PROD_YOUTUBE_API_KEY}
YOUTUBE_QUOTA_LIMIT=10000

# ========================================
# Worker Configuration
# ========================================
WORKER_CONCURRENCY=5
MAX_YOUTUBE_CALLS_PER_MINUTE=60

# ========================================
# Logging
# ========================================
LOG_LEVEL=warn
LOG_FORMAT=json

# ========================================
# Production Options
# ========================================
DEBUG=false
SECURE_COOKIES=true

# ========================================
# SSL Configuration
# ========================================
SSL_CERT_PATH=/etc/letsencrypt/live/hbcubandhub.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/hbcubandhub.com/privkey.pem

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=https://hbcubandhub.com,https://www.hbcubandhub.com

# ========================================
# Backup Configuration
# ========================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${PROD_BACKUP_S3_BUCKET}
